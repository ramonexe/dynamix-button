{
    "version": "1.0.8",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "deploy": "npm version patch && npm publish --access public"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "dynamix-button",
    "author": "Ramon Garcia",
    "module": "dist/dynamix-button.esm.js",
    "size-limit": [
        {
            "path": "dist/dynamix-button.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/dynamix-button.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.2.0",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "husky": "^9.1.7",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "size-limit": "^11.2.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.8.1",
        "typescript": "^3.9.10"
    }
}
